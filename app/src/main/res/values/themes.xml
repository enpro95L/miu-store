<resources>
    <!-- Base application theme. -->
    <style name="Theme.miustore" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand</item>
    </style>

    <style name="MyTextView.Small" parent="MyTextView">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyTextView.Medium" parent="MyTextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyTextView.Large" parent="MyTextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyTextView.XLarge" parent="MyTextView">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyEditText">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:background">@drawable/drawable_edittext</item>
    </style>

    <style name="MyEditText.Small" parent="MyEditText">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyEditText.Medium" parent="MyEditText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyEditText.Large" parent="MyEditText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyEditText.XLarge" parent="MyEditText">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/drawable_button</item>
        <item name="android:fontFamily">@font/quicksand</item>
    </style>
</resources>